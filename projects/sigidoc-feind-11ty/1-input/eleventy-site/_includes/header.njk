<header>
    <div class="row">
        <div class="large-12 columns">
            <div class="header-content">
                <h1 id="site-title">
                    <span id="site-title-abbr">IRCyr</span>
                    <span class="title-separator"></span>
                    <span id="site-title-full">seals of Roman Cyrenaica</span>
                </h1>

                {% if language %}
                <nav class="language-switcher">
                    {% set langLabels = {en: 'English', de: 'Deutsch', el: 'Ελληνικά'} %}
                    {% for lang in ['en', 'de', 'el'] %}
                        {% if lang == language %}
                            <span class="lang-current">{{ langLabels[lang] }}</span>
                        {% else %}
                            {% if documentId %}
                                <a href="/{{ lang }}/seals/{{ documentId }}.html" class="lang-link">{{ langLabels[lang] }}</a>
                            {% else %}
                                <a href="/{{ lang }}/seals/" class="lang-link">{{ langLabels[lang] }}</a>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </nav>
                {% endif %}
            </div>
        </div>
    </div>
</header>

<style>
    header {
        background: linear-gradient(135deg, #2c5282 0%, #2d3748 100%);
        color: white;
        padding: 2rem 0;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 0;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

    #site-title {
        margin: 0;
        padding: 0;
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        flex: 1;
    }

    .language-switcher {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        flex-shrink: 0;
    }

    .lang-link, .lang-current {
        padding: 0.375rem 0.75rem;
        border-radius: 4px;
        font-size: 0.8125rem;
        font-weight: 500;
        transition: all 0.2s ease;
        white-space: nowrap;
    }

    .lang-link {
        background: rgba(255, 255, 255, 0.1);
        color: #e2e8f0;
        text-decoration: none;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .lang-link:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border-color: rgba(255, 255, 255, 0.4);
    }

    .lang-current {
        background: rgba(255, 255, 255, 0.25);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.4);
        font-weight: 600;
    }

    #site-title-abbr {
        font-size: 2.5rem;
        font-weight: 800;
        color: #fff;
        letter-spacing: 0.05em;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .title-separator {
        width: 2px;
        height: 2rem;
        background: rgba(255,255,255,0.4);
        display: inline-block;
    }

    #site-title-full {
        font-size: 1.25rem;
        font-weight: 400;
        color: #e2e8f0;
        letter-spacing: 0.025em;
    }

    @media (max-width: 768px) {
        header {
            padding: 1.5rem 0;
        }

        .header-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        #site-title {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        #site-title-abbr {
            font-size: 2rem;
        }

        #site-title-full {
            font-size: 1.125rem;
        }

        .title-separator {
            display: none;
        }

        .language-switcher {
            gap: 0.375rem;
        }

        .lang-link, .lang-current {
            padding: 0.3rem 0.6rem;
            font-size: 0.75rem;
        }
    }
</style>
